<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SVG2TIFF"
        xmlns:StyxWPFControls="clr-namespace:StyxWPFControls;assembly=StyxWPFControls" x:Class="SVG2TIFF.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Icon="ico.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <ListView x:Name="_List" Margin="0,0,0.4,-0.2" Grid.RowSpan="13">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label x:Name="label" Grid.ColumnSpan="3" Content="SVG总数" Grid.Column="1" Margin="-0.4,0,0.4,0" VerticalContentAlignment="Bottom" Padding="5,5,5,3" VerticalAlignment="Center"/>
        <Label x:Name="label1" Grid.ColumnSpan="3" Content="转换进度" Grid.Column="1" Grid.Row="2" VerticalContentAlignment="Bottom" Padding="5,5,5,2" Margin="-0.4,0,0.4,0" VerticalAlignment="Center"/>
        <Button x:Name="_BTNOpen" Content="打开" Grid.Column="2" Grid.Row="9" Click="_BTNOpen_Click" Margin="-0.4,-0.4,0.4,0.4"/>
        <Button x:Name="_BTNConvert" Content="转换" Grid.Column="2" Grid.Row="11" Margin="-0.4,-0.2,0.4,1.2" Click="_BTNConvert_Click"/>
        <TextBox x:Name="_TBTotal" Grid.ColumnSpan="3" Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" VerticalContentAlignment="Center" IsReadOnly="True" Text="0" Margin="-0.4,0,0.4,0"/>
        <TextBox x:Name="_TBProgress" Grid.ColumnSpan="3" Grid.Column="1" Grid.Row="3" TextWrapping="Wrap" VerticalContentAlignment="Center" IsReadOnly="True" Text="0" Margin="-0.4,0,0.4,-0.2"/>
        <Label x:Name="label2" Grid.ColumnSpan="3" Content="DPI" Grid.Column="1" Grid.Row="4" Padding="5,5,5,2" VerticalContentAlignment="Bottom" Margin="-0.4,0.2,0.4,-0.2"/>

        <StyxWPFControls:DigitalBox x:Name="_DBDPI" Grid.ColumnSpan="3" Grid.Column="1" Margin="-0.4,0.2,0.4,-0.4" Grid.Row="5" Type="UnsignedInteger" Value="120"/>
        <Label x:Name="label3" Grid.ColumnSpan="3" Content="输出格式" Grid.Column="1" Margin="-0.4,0.4,0.4,-0.4" Grid.Row="6" Padding="5,5,5,2" VerticalContentAlignment="Bottom"/>
        <ComboBox x:Name="_CBFormat" Grid.ColumnSpan="3" Grid.Column="1" Margin="-0.4,0,0.4,0" Grid.Row="7" SelectedIndex="0">
            <ComboBoxItem Content="TIFF"/>
            <ComboBoxItem Content="PNG"/>
            <ComboBoxItem Content="JPG"/>
        </ComboBox>

    </Grid>
</Window>
